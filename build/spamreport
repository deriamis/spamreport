PERL5_APP_CPANMINUS

$fatpacked{"App/cpanminus/fatscript.pm"} = '#line '.(1+__LINE__).' "'.__FILE__."\"\n".<<'PERL5_APP_CPANMINUS_FATSCRIPT';
  package App::cpanminus::fatscript;
  #
